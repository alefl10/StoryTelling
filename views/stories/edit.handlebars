<h1>Edit St0ry</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}" required>
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="checked" {{#if story.allowComments}}
                    checked="checked" {{/if}}>
                <label for="checked">Allow Comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell us your amazing St0ry</h5>
                <textarea name="body" required>{{story.body}}</textarea>
            </div>
        </div>
        <input type="submit" value="Confirm Edit" class="btn">
    </form>
</div>