<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
                <i class="fa fa-pencil"></i>
            </a>
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 150)}}</p> {{!-- trimTags and truncate are handlebars helper functions defined in hbs.js --}}
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="Contact Person">
                    {{user.firstName}} {{user.lastName}}
                </div>
            </div>
            <div class="card-action center-align">
                <div class="btn blue lighten-3" href="/stories/show/{{id}}" >Read More</div>
            </div>
        </div>
    </div>
    {{else}}
    <p>No public stories found...</p>
    {{/each}}
</div>